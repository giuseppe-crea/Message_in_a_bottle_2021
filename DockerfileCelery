FROM python:3.9-alpine
WORKDIR /code
ADD . /code
ENV DOCKER=yes
ENV TZ=Europe/Rome
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN apk add build-base
RUN apk add git
RUN pip install -r requirements.txt
RUN pip install git+https://github.com/giuseppe-crea/flask-autodoc.git#egg=Flask-Autodoc
CMD ["celery", "-A", "monolith.background.celery", "worker", "-l", "INFO"]
